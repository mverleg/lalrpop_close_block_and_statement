
grammar;

use crate::ast::Ast;
use crate::ast::Expr;


pub Root: Ast = {
    <mut es:(<Expr> r"[\n\r]"+)+> <e:Expr> r"[\n\r]"* => {
        es.push(e);
        Ast { expressions: es }
    }
}

Expr: Expr = {
    BinaryExpr => <>,
}

BinaryExpr: Expr = {
    <l:BinaryExpr> "+" r"[\n\r]"* <r:NullaryExpr> => Expr::Sum(Box::new([l, r])),
    NullaryExpr,
}

NullaryExpr: Expr = {
    Nr => Expr::Num(<>),
}

Nr: u64 = {
    r"[0-9]+" => <>.parse().unwrap()
}
