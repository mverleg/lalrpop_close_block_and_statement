
grammar;

use crate::ast::Ast;
use crate::ast::Expr;
use crate::ast::Expression;


pub Root: Ast = {
    <mut es:(<Expr> r"[\n\r]"+)+> <e:Expr> r"[\n\r]"* => {
        es.push(e);
        Ast { expressions: es },
    }
}

pub Expr: Expression = {
    Nr => Ast { expressions: vec![Expr::Num(<>)] },
}

Nr: u64 = {
    r"[0-9]+" => <>.parse().unwrap()
}
